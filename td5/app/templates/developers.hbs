<div class="ui container">
  <div class="ui horizontal list">
    <div class="item">
      {{#link-to "developers"}}
        Developers
      {{/link-to}}
    </div>
    <div class="item">
      {{#link-to "projects"}}
        Projects
      {{/link-to}}
    </div>
  </div>

  <h1><i class="ui list icon"></i> models\Developer</h1>
  <h4>Data administration</h4>
  {{#link-to "developers.new"}}
    <button class="ui orange button"><i class="plus icon"></i>Add a new models\Developer</button>
  {{/link-to}}

  <table class="ui single line table">
    <thead>
    <tr>
      <th>Identity</th>
    </tr></thead>
    <tbody>
    {{#each model as |dev|}}
    <tr>
        <td data-label="Identity">
          {{dev.identity}}
        {{#link-to "developers.edit" dev}}
          <button class="ui icon button">
            <i class="edit icon"></i>
          </button>
            {{/link-to}}
          <button class="circular icon ui button" {{action "askDeleteConfirm" dev}}>
          <i class="remove red icon"></i>
          </button>
        </td>
    </tr>
    {{/each}}
    </tbody>
  </table>
</div>
  {{#if model.del}}
    <div class="ui icon message">
      <div class="content">
        <div class="header">
         Do you want to delete {{model.del.identity}} ?
        </div>
        <p>
        <button class="positive ui button" {{action "deleteDev" model.del}}>
          <i class="check icon"></i>
          Confirm
        </button>
        <button class="negative ui button" onClick={{action "cancelDeletion"}}>
          <i class="remove icon"></i>
          Cancel
        </button>
        </p>
  {{/if}}
</div>
{{outlet}}